datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  createdAt DateTime @default(now())
}

model Pelanggan {
  id_pelanggan     Int         @id @default(autoincrement())
  nama_pelanggan   String
  umur_pelanggan   Int
  alamat_pelanggan String
  email_pelanggan  String
  transaksi        Transaksi[]
}

model Produk {
  id_produk   Int         @id @default(autoincrement())
  nama_produk String
  harga       Int
  stok        Int
  foto        String
  deskripsi   String
  kategori    String
  transaksi   Transaksi[]
}

model Transaksi {
  id_transaksi      Int       @id @default(autoincrement())
  id_produk         Int
  id_pelanggan      Int
  tanggal_transaksi DateTime
  total_harga       Int

  produk    Produk    @relation(fields: [id_produk], references: [id_produk])
  pelanggan Pelanggan @relation(fields: [id_pelanggan], references: [id_pelanggan])
}
